# The0 OSS Configuration
# Copy this file to .env and modify the values as needed

# Version
THE0_VERSION=1.0.0

# Docker Images (change these to use your own registry)
THE0_API_IMAGE=the0/api:latest
THE0_RUNTIME_IMAGE=the0/runtime:latest
THE0_FRONTEND_IMAGE=the0/frontend:latest

# Service Ports
API_PORT=3000
FRONTEND_PORT=3001
RUNTIME_PORT=8080

# Infrastructure Ports
POSTGRES_PORT=5432
REDIS_PORT=6379
NATS_PORT=4222
NATS_MONITOR_PORT=8222
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# Database Configuration
POSTGRES_PASSWORD=the0_secure_password_change_me

# MinIO Configuration  
MINIO_USER=the0admin
MINIO_PASSWORD=the0_secure_password_change_me

# Security Configuration (CRITICAL: Change in production!)
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long-change-this

# Runtime Configuration
LOG_LEVEL=info
MAX_CONCURRENT_BOTS=10
BOT_EXECUTION_TIMEOUT=300s
MAX_MEMORY_MB=512
MAX_CPU_SHARES=1024